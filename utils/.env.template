# API Settings
API_KEY=your-api-key-here                    # API key for authentication
# ENVIRONMENT=development                       # Application environment (development/production)

# Database Settings
ATLAS_USER=your-atlas-username               # MongoDB Atlas username
ATLAS_PASSWORD=your-atlas-password           # MongoDB Atlas password

# AI Settings
GEMINI_API_KEY=your-gemini-key              # Google's Gemini AI API key
#OPENAI_API_KEY=your-openai-key              # OpenAI API key
# GROQ_API_KEY=your-groq-key                  # Groq API key

# Scraper Settings (optional - defaults shown)
# MAX_CONCURRENT_REQUESTS=3                  # Maximum number of concurrent scraping requests
# BATCH_SIZE_LISTINGS=100                    # Number of listings to process in one batch
# BATCH_SIZE_DETAILS=5                       # Number of detail pages to process in one batch
# TIMEOUT_PAGE_LOAD=30000                    # Page load timeout in milliseconds
# TIMEOUT_COOKIE_CONSENT=5000                # Cookie consent timeout in milliseconds
# TIMEOUT_CONTENT_LOAD=30000                 # Content load timeout in milliseconds
# RETRY_MAX_ATTEMPTS=3                       # Maximum number of retry attempts
# RETRY_INITIAL_DELAY=2.0                    # Initial delay between retries in seconds
# RETRY_BACKOFF_FACTOR=1.5                   # Multiplier for subsequent retry delays

# Logging Settings (optional - defaults shown)
# LOG_LEVEL=INFO                             # Logging level (DEBUG/INFO/WARNING/ERROR/CRITICAL)
# LOG_FILE_MAX_BYTES=10485760                # Maximum log file size (10MB)
# LOG_BACKUP_COUNT=9                         # Number of backup log files to keep
# LOG_BATCH_SIZE=100                         # Number of log records to process in one batch
